<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AR_Drone_Remote_for_Windows_Phone"
    x:Class="AR_Drone_Remote_for_Windows_Phone.BatteryIndicator"
    mc:Ignorable="d"
    d:DesignHeight="30" d:DesignWidth="60"
    x:Name="This">
    <UserControl.Resources>
        <local:BatteryPercentageToColorConverter x:Key="BatteryPercentageToColorConverter"
                                                 LowPowerThreshold="15"
                                                 LowStrengthColor="Red"
                                                 GoodStrengthColor="{StaticResource PhoneForegroundBrush}"/>
        <SolidColorBrush x:Key="BatteryColor" 
                         Color="{Binding BatteryPercentage, Converter={StaticResource BatteryPercentageToColorConverter}, ElementName=This}"/>
        <local:BatteryPercentageToVisibilityConvert x:Key="BatteryPercentageToVisibilityConvert" />
    </UserControl.Resources>
    <UserControl.FontFamily>
        <StaticResource ResourceKey="PhoneFontFamilyNormal"/>
    </UserControl.FontFamily>
    <UserControl.FontSize>
        <StaticResource ResourceKey="PhoneFontSizeNormal"/>
    </UserControl.FontSize>
    <UserControl.Foreground>
        <StaticResource ResourceKey="PhoneForegroundBrush"/>
    </UserControl.Foreground>
    <Viewbox Stretch="Uniform">
        <Grid x:Name="LayoutRoot" Width="20" Height="10" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="18*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="{StaticResource BatteryColor}"  
				BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="0" 
						Margin="1,1,0,1" 
						Fill="{StaticResource BatteryColor}"
						Visibility="{Binding BatteryPercentage, ConverterParameter=7, Converter={StaticResource BatteryPercentageToVisibilityConvert}, ElementName=This}"/>
                    <Rectangle Grid.Column="1" 
						Margin="1" 
						Fill="{StaticResource BatteryColor}"
						Visibility="{Binding BatteryPercentage, ConverterParameter=33, Converter={StaticResource BatteryPercentageToVisibilityConvert}, ElementName=This}"/>
                    <Rectangle Grid.Column="2" 
						Margin="0,1,1,1" 
						Fill="{StaticResource BatteryColor}"
						Visibility="{Binding BatteryPercentage, ConverterParameter=66, Converter={StaticResource BatteryPercentageToVisibilityConvert}, ElementName=This}"/>
                </Grid>
            </Border>
            <Rectangle Grid.Column="1" 
				Height="4" 
				Stroke="{StaticResource BatteryColor}" 
				Fill="{StaticResource BatteryColor}"/>
        </Grid>
    </Viewbox>
</UserControl>